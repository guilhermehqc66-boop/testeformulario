<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Formulário de Contato — EmailJS</title>

  <!-- SDK oficial EmailJS (versão browser) -->
  <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
</head>
<body>
  <h2>Formulário de Contato</h2>

  <form id="contact-form">
    <label>Nome:</label><br>
    <input type="text" name="name" required><br>

    <label>Email:</label><br>
    <input type="email" name="email" required><br>

    <label>Telefone:</label><br>
    <input type="text" name="phone"><br>

    <label>Mensagem:</label><br>
    <textarea name="message" required></textarea><br>

    <button type="submit">Enviar</button>
  </form>

  <p id="status"></p>

  <script>
    // Inicializa EmailJS com sua public key
    emailjs.init("fe2q37Y8_zNKb8izL");

    // Quando o formulário for enviado
    document.getElementById('contact-form')
      .addEventListener('submit', function(event) {
        event.preventDefault();

        document.getElementById('status').innerText = "Enviando...";

        // Envia usando sendForm, conforme documentação
        emailjs.sendForm(
          "service_2jiyx2k",
          "template_kpq7v5k",
          this
        ).then(function(response) {
          console.log('SUCCESS!', response.status, response.text);
          document.getElementById('status').innerText = "Mensagem enviada com sucesso!";
        }, function(error) {
          console.log('FAILED...', error);
          document.getElementById('status').innerText = "Falha ao enviar: " + JSON.stringify(error);
        });
      });
  </script>
</body>
</html>
