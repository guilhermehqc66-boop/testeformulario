<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Formulário Funcionando</title>
  <script src="https://cdn.emailjs.com/sdk/2.3.2/email.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      emailjs.init("fe2q37Y8_zNKb8izL"); // sua PUBLIC KEY

      console.log("SDK carregado.");
    });

    function sendEmail(e) {
      e.preventDefault();

      console.log("Enviando...");

      emailjs.sendForm(
        "service_2jiyx2k",      // SERVICE ID
        "template_kpq7v5k",     // TEMPLATE ID
        e.target               // O FORM em si
      )
      .then(function(response) {
        alert("Enviado com sucesso!");
        console.log("SUCCESS", response);
      }, function(error) {
        alert("Falha ao enviar!");
        console.log("ERROR", error);
      });
    }
  </script>

</head>

<body>

  <h2>Formulário que funciona</h2>

  <form onsubmit="sendEmail(event)">
    <input type="text" name="name" placeholder="Seu nome" required><br><br>
    <input type="email" name="email" placeholder="Seu email" required><br><br>
    <input type="text" name="phone" placeholder="Telefone"><br><br>
    <textarea name="message" placeholder="Sua mensagem" required></textarea><br><br>

    <button type="submit">Enviar</button>
  </form>

</body>
</html>
